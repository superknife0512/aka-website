<%- include('../includes/html-head.ejs') %>
    <%- include('../includes/teacher-header.ejs') %>

    <div class="container">
        <form action="/teacher/album" 
        method="POST" 
        class="album">
                <h1 class="heading-title">Album</h1>
                <hr>
        
                <div class="form-group">
                    <label>Tên của album</label>
                    <input type="text" 
                        class="form-control" 
                        name="name" 
                        placeholder="Enter Album's name">                    
                </div>

                <div class="form-group">
                    <label>Miêu tả ngắn về album</label>
                    <textarea type="text" 
                        class="form-control" 
                        name="shortDes" 
                        placeholder="Enter Album's description"
                        rows="5"></textarea>                 
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>


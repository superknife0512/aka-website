<%- include('../includes/html-head.ejs') %>

<div class="background-gray full-page">
<br><br>

<div class="container signup">

    <div class="signup__wrapper">
    
        <h1 class="heading-title">Đăng nhập</h1>
        <h4>Quên mật khẩu? <a href="#">Tìm lại mật khẩu ngay !</a></h4>
        <hr>
        <% if(error) { %>
            <p class="alert alert-warning"><%= error %></p>
        <% } %>
        <form class="signup__form" 
                action="/teacher/login" 
                method="POST">

            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" 
                        class="form-control" 
                        name="email"
                        placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">Email của bạn sẽ được dùng làm tên đăng nhập</small>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" 
                        class="form-control" 
                        name="password" 
                        placeholder="Password">                
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
</div>

